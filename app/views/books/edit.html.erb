<h2>Editing Book</h2>

<% if @book.errors.any? %>error
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book,url: update_book_path(@book.id), method: :patch do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <br>

  <%= f.submit 'Update Book' %>
<br>
<td><%= link_to "Show", "/books/#{@book.id}" %></td> |
<td><%= link_to "Back", "/books" %></td>

<% end %>