<p id="notice"></p>


<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th coltd="3"></th>
    </tr>
  </thead>
<tbody>
<% @lists.each do |list| %>
<tr>
<td><%= list.title %></td>
<td><%= list.body %></td>
<td><%= link_to "Show", "/books/#{list.id}" %></td>
<td><%= link_to "Edit", "/books/#{list.id}/edit" %></td>
<td><%= link_to "Destroy", destroy_list_path(list), method: :delete, "data-confirm" => "Are you sure?" %></td>
</tr>
<% end %>
</tbody>
</table>
<% if @list.errors.any? %>
  <%= @list.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @list.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<h2>New book</h2>
<%= form_with model: @list,url: books_path do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Create Book' %>
<% end %>
